<h1>Users</h1>

//----Aqui manejamos nuestra vista-- si es true nos agrega los botones y si no no //

<div>
    {{#each users}}
        <li><strong>Nombre: </strong>{{this.first_name}} - {{this.last_name}}- <strong>Email: </strong>{{this.email}}</li>
    {{/each}}
    <center>
        {{#if hasPrevPage}}
            <a href="/users?numPage={{prevPage}}"><button>Anterior</button></a>
        {{/if}}
        <label>{{page}}</label>
        {{#if hasNextPage}}
            <a href="/users?numPage={{nextPage}}"><button>Siguiente</button></a>
        {{/if}}

    </center>
    
</div>